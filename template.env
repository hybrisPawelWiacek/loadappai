# LoadApp.AI Environment Configuration

# Database Settings
DATABASE_URL=sqlite:///loadapp.db  # Default SQLite database path
SQL_ECHO=false  # Enable SQL query logging

# Server Settings
BACKEND_HOST=localhost
PORT=5001  # Do not use 5000 (conflicts with Apple AirTunes)
ENV=development

# API Keys (required)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
CREWAI_BEARER_TOKEN=your_crewai_enterprise_token_here

# OpenAI Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY=1.0

# Google Maps Configuration
GMAPS_MAX_RETRIES=3
GMAPS_RETRY_DELAY=1.0
GMAPS_CACHE_TTL=3600

# CrewAI Enterprise API Configuration
CREWAI_BASE_URL=https://api.crewai.com

# Feature Flags
WEATHER_ENABLED=false
TRAFFIC_ENABLED=false
MARKET_DATA_ENABLED=false
